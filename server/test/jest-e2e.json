{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@academia-pro/(.*)$": "<rootDir>/../common/dist/$1",
    "^@academia-pro/types/(.*)$": "<rootDir>/../common/dist/types/$1"
  }
}
